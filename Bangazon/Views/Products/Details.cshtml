@model Bangazon.Models.ProductViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
</h1>

<div>
    <hr />
    <dl class="row">
        @if (Model.ImagePath == null)
        {

        }
        else
        {
          
            <dd class="col-sm-12">
                <img src="~/images/@Model.ImagePath" style="width: 8em; height: auto;" />
            </dd>


        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="Orders" asp-route-id="@Model.Id" asp-action="Create">
        <input type="submit" class=" btn btn-light" value="Add to Cart" />
    </form>
    <a asp-controller="ProductTypes" asp-action="Index" class=" btn btn-secondary">View Products</a>
    <a asp-controller="Orders" asp-action="Index" class=" btn btn-secondary">View Cart</a>

</div>

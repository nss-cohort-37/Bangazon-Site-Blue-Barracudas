@model Bangazon.Models.OrderViewModels.OrderPaymentFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Complete Your Order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentTypeId" class="control-label"></label>
                <select asp-for="PaymentTypeId" class="form-control" asp-items="@Model.PaymentTypeOptions"></select>
            </div>
            <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-controller="PaymentTypes" asp-action="Create" value="Add Payment"/>

            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

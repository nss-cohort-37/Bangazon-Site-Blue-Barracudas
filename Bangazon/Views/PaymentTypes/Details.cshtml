@model Bangazon.Models.PaymentType

@{
    ViewData["Title"] = "Details";
}


<h1 style="color:goldenrod">@Html.DisplayFor(model => model.Description)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            @if (Model.Orders == null)
            {

            }
            else
            {

                <h5>Order History</h5>
            }

        </tr>
    </thead>

    @foreach (var item in Model.Orders)
    {

        <tbody>
            <tr class="col-sm-2">
                <td>

                @Html.ActionLink(item.DateCompleted.ToString(), // <-- Link text
                       "ViewOrder", // <-- Action Method Name
                       "Orders", // <-- Controller Name
                       new { id = item.OrderId }, // <-- Route value
                       null // <-- htmlArguments
                       )
                </td>
            </tr>
        </tbody>

    }
</table>


<div>

@model IEnumerable<Bangazon.Models.OrderProduct>



@{
    ViewData["Title"] = "Index";
}


<h1>Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.DateCreated)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    <ul>


                        <li>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">
                                @Html.DisplayFor(modelItem => item.Product.Title)
                            </a>
                            @Html.DisplayFor(modelItem => item.Product.Price)
                        </li>

                    </ul>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.DateCreated)
                </td>

                <td>

                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderProductId })
                </td>
            </tr>
            <a type="button" asp-controller="Orders" asp-action="Edit" asp-route-id="@item.OrderId"> Complete Order </a>
            <a type="button" asp-controller="Orders" asp-action="CancelOrder" asp-route-id="@item.OrderId"> Cancel Order </a>
        }
    </tbody>
</table>


